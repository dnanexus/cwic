#!/usr/bin/env bash

set -e

if [[ $1 == "--help" || $1 == "-h" ]]; then
    echo -e "Usage: $0"
    echo -e "Logins into a Docker registry specified in $HOME/credentials input file"
    exit
fi

command -v docker >/dev/null 2>&1 || (echo "ERROR: docker is required in the cwic Docker container."; exit 1)

mark-section "parsing credentials input file"

CREDENTIALS=/home/dnanexus/credentials
if [[ ! -f "$CREDENTIALS" ]]; then
    echo "ERROR: Credentials file not provided. Cannot log into a Docker registry."
    exit 1
fi

export REGISTRY=$(jq '.docker_registry.registry' "$CREDENTIALS" | tr -d '"')
export REPOSITORY=$(jq '.docker_registry.repository' "$CREDENTIALS" | tr -d '"')
export REGISTRY_USERNAME=$(jq '.docker_registry.username' "$CREDENTIALS" | tr -d '"')

if [[ -z $REGISTRY || -z $REPOSITORY || -z $REGISTRY_USERNAME \
      || $REGISTRY == "null" || $REPOSITORY == "null"  || $REGISTRY_USERNAME == "null" ]]; then
    echo "Error parsing the credentials file. The expected format is: "
    echo "{"
    echo "    docker_registry: {"
    echo "        registry": "<Docker registry name, e.g. quay.io or docker.io>",
    echo "        username": "<name>",
    echo "        repository": "<repository as defined by DockerHub, e.g. your organization>",
    echo "        token": "<API token>"
    echo "    }"
    echo "}"
    exit 1
fi

mark-section "logging into $REGISTRY as $REGISTRY_USERNAME"

jq '.docker_registry.token' "$CREDENTIALS" | tr -d '"' | docker login $REGISTRY --username $REGISTRY_USERNAME --password-stdin
